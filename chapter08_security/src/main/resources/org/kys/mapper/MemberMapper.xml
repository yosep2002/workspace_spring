<?xml version="1.0" encoding="UTF-8"?>
<!-- 해당 xml 문서의 구조가 마이바티스의 매퍼를 구성하는 구조로 나타나 있음을 알려주는 설정 특히 이 설정은 configure 
	부분의 xml과 다르므로 설정시 주의 필요 -->
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.kys.mapper.MemberMapper"> <!-- 마이바티스 환경 설정 xml에 사용할 이름 -->

	<resultMap type="org.kys.domain.MemberVO" id="memberMap">
		<result property="userId" column="userId"/>
		<result property="userPw" column="userPw"/>
		<result property="userName" column="userName"/>
		<result property="regDate" column="regDate"/>
		<result property="updateDate" column="updateDate"/>
		<collection property="authList" resultMap="authMap"></collection>
	</resultMap>
	
	<resultMap type="org.kys.domain.AuthVO" id="authMap">
		<result property="userId" column="userId"/>
		<result property="auth" column="auth"/>
	</resultMap>

	<select id="read" resultMap="memberMap">
		SELECT
			mem.*, auth.auth
		FROM 
			tbl_member mem left JOIN tbl_member_auth auth
		ON 
			mem.userid = auth.userid
		WHERE
			mem.userid = #{userid}
	</select>

</mapper>